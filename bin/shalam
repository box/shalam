#!/usr/bin/env node

var argv = require('minimist')(process.argv.slice(2));


function help() {
    console.log('Shalam Usage:');
    console.log('    shalam path/to/css path/to/images destination/path/for/sprite.png');
}


if ('help' in argv) {
    help();
    process.exit(0);
}

if ('package' in argv) {
    console.log('Package support is not yet implemented.')
    process.exit(0);
}

if (argv._.length !== 3) {
    help();
    process.exit(0);
}

require('../lib/main').run(argv._[0], argv._[1], argv._[2]);
